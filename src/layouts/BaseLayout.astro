---
import "../styles/reset.css";
import "../styles/var.css";
import "../styles/global.css";
import "../styles/util.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SEOHead from "../components/SEOHead.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
    title: string;
    description: string;
    canonical?: string;
    ogTitle?: string;
    ogDescription?: string;
    ogImage?: string;
    ogImageAlt?: string;
    ogType?: "website" | "article";
    articlePublished?: Date;
    articleModified?: Date;
    articleTags?: string[];
    robots?: string;
    author?: string;
}

const { 
    title, 
    description, 
    canonical,
    ogTitle,
    ogDescription,
    ogImage,
    ogImageAlt,
    ogType = "website",
    articlePublished,
    articleModified,
    articleTags,
    robots,
    author
} = Astro.props;

---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1">
        
        <SEOHead 
            title={title}
            description={description}
            canonical={canonical}
            ogTitle={ogTitle}
            ogDescription={ogDescription}
            ogImage={ogImage}
            ogImageAlt={ogImageAlt}
            ogType={ogType}
            articlePublished={articlePublished}
            articleModified={articleModified}
            articleTags={articleTags}
            robots={robots}
            author={author}
        />
    
        <link rel="icon" href="favicon.ico">
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="sitemap" type="application/xml" href="/sitemap-index.xml">
        <meta name="copyright" content="Bryan Hogan" />
        <meta name="theme-color" content="#A594D3">

        <link rel="alternate" type="application/rss+xml" title="Blog posts by Bryan Hogan" href={new URL("rss.xml", Astro.site)} />
         
         <script is:inline defer src="https://cloud.umami.is/script.js" data-website-id="88cecc6c-ebbb-4b08-a5d1-b07a8f7383df"></script>
         <ClientRouter />
         <slot name="head"/>
      </head>
    <body>
        <Header />
        <div class="height-smart-fill-screen">
		    <div class="base-layout">
                <slot />
		    </div>
        </div>
        <Footer />
    </body>
</html>

<style is:global>
</style>
