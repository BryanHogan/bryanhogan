---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
const formattedPubDate = new Date(frontmatter.pubDate).toLocaleDateString();
const formattedLastUpdate = new Date(
  frontmatter.lastUpdate,
).toLocaleDateString();
import NewsletterCallout from "../components/NewsletterCallout.astro";
---

<Layout
  title={frontmatter.title}
  metaDescription={frontmatter.description}
  headerMode="Blog"
  ogtype="article"
>
  <div class="gradient-background">
    <img
      src={frontmatter.coverImage.url}
      alt={frontmatter.coverImage.alt}
      width={frontmatter.coverImage.width}
      height={frontmatter.coverImage.height}
      transition:name={frontmatter.coverImage.url}
    />
  </div>
  <div class="second-menu-section">
    <ul>
      <li>
        <button onclick="
        history.back()
        " class="">
          <img
            class="arrow-back"
            src="../icons/Arrow-Left-Icon.svg"
            alt="Arrow pointing left indicating its usage to be clickable to go to the previous page."
            height="16"
            width="16"
            title="Go Back"
          />
        </button>
      </li>
    </ul>
  </div>
  <article class="blog text-section">
    <h1 class="text-align-center">{frontmatter.title}</h1>
    <slot />
    <div class="infos">
      <p>Written by {frontmatter.author}</p>
      <p>Published: {formattedPubDate}</p>
      <p>Last update: {formattedLastUpdate}</p>
    </div>
  </article>
  <NewsletterCallout />
</Layout>

<style>
  p {
    text-align: start;
  }
  .second-menu-section {
    display: flex;
    flex-direction: row;
    & li {
      padding: 1em;
      padding-bottom: 0;
    }
    & button {
      background-color: var(--color-main-dark);
      border: none;
    }
  }
  .arrow-back {
    transition: all 300ms;
    filter: brightness(0) saturate(100%) invert(57%) sepia(6%) saturate(183%)
      hue-rotate(169deg) brightness(92%) contrast(92%);
    &:hover {
      transition: all 200ms;
      filter: brightness(0) saturate(100%) invert(86%) sepia(2%) saturate(892%)
        hue-rotate(187deg) brightness(114%) contrast(88%);
    }
    & img {
      height: 0.8em;
    }
  }
  .infos {
    border-top: 1px solid var(--color-main-bright);
    padding-top: 10px;
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    justify-content: space-around;
    width: 100%;
    & p {
      font-size: 0.9rem;
      margin: 0px;
      padding: 0px;
    }
  }
  h1 {
    text-wrap: balance;
    max-width: 1250px;
    margin-inline: auto;
    grid-column: 2 / 3;
    margin-top: 1em;
    text-align: center;
  }
  .gradient-background {
    min-height: 250px;
    height: 35vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    & img {
      height: 120px;
      width: auto;
    }
  }
  @media only screen and (max-width: 699px) {
    .infos {
      flex-direction: column;
    }
    h1 {
      font-size: 2.8rem;
    }
    h2 {
      font-size: 2.4rem;
    }
  }
</style>
