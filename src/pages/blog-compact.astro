---
import CompactPostsList from "../components/CompactPostsList.astro";
import Layout from "../layouts/Layout.astro";

import { getCollection } from "astro:content";

const allPosts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

---

<Layout
  title="Bryan's Blog Compact View"
  headerMode="Blog"
  metaDescription="Compact view of Bryan Hogan's blog. See a quick overview of all posts. All about learning, creating and finding balance."
  ogtype="website"
>
  <h1 class="text-align-center">Blog Posts</h1>
  <CompactPostsList posts={allPosts} />
</Layout>

<style>
  h1 {
    padding-top: 1em;
  }

</style>
