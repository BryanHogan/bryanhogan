---
import NewsletterCallout from "../components/NewsletterCallout.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="Bryan's Mailing List"
    headerMode="Blog"
    metaDescription="Join my mailing list to receive updates on my blog posts."
    ogtype="website"
>
    <section class="gradient-background">
        <div class="dark-back">
            <NewsletterCallout />
        </div>
    </section>
</Layout>
<style>
    .dark-back {
        background-color: var(--color-main-dark-transparent);
        border-radius: 1em;
        margin-inline: auto;
        width: 90%;
        max-width: 550px;
    }
    .gradient-background {
        min-height: 80vh;
    }
</style>
