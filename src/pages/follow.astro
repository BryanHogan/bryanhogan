---
import NewsletterCallout from "../components/NewsletterCallout.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="Bryan's Mailing List"
    headerMode="Blog"
    metaDescription="Join my mailing list to receive updates."
    ogtype="website"
>
    <section class="gradient-background">
        <NewsletterCallout />
        <div class="dark-back">
            <iframe
        src="https://bryanhogan.substack.com/embed"
        width="480"
        height="320"
        style="border:1px solid #EEE; background:white;"></iframe>
        </div>
    </section>
    
</Layout>
<style>
    .dark-back {
        background-color: var(--color-main-dark-transparent);
        border-radius: 1em;
        margin-inline: auto;
        width: 90%;
        max-width: 550px;
    }
    .gradient-background {
        min-height: 80vh;
    }
</style>
