---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
---

<Layout
  title="Bryan Hogan"
  metaDescription="Bryan Hogan's site. Here you can find my blog, about, now, newsletter and portfolio page."
  headerMode="Home"
  ogtype="website"
>
  <section class="intro">
    <div class="intro-section">
      <div class="header-picture-section">
        <h1>Hi, I'm<br />Bryan Hogan.</h1>
        <picture>
          <source
            type="image/avif"
            srcset="../images/Bryan-Hogan-Smiling.avif"
          />
          <source
            type="image/webp"
            srcset="../images/Bryan-Hogan-Smiling.webp"
          />
          <img
            src="../images/Bryan-Hogan-Smiling.png"
            width="363"
            height="359"
            alt="Bryan Hogan smiling"
            decoding="async"
          />
        </picture>
      </div>
      <p>On this page you can find my blog, portfolio and more.</p>
      <div class="button-group">
        <Button
          link="/blog"
          text="Blog"
          targetText="_self"
          buttonStyle="gradient large grow"
        />
        <Button
          link="/follow"
          text="Follow"
          targetText="_self"
          buttonStyle="bright large grow"
        />
        <Button
          link="/portfolio"
          text="Portfolio"
          targetText="_self"
          buttonStyle="bright large grow"
        />
      </div>
    </div>
  </section>
</Layout>

<style>
  h1 {
    padding-bottom: 0.25em;
  }
  .intro {
    min-height: 90vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  section {
    padding: 0px;
    margin: 0px;
  }
  .intro-section {
    min-height: 40vh;
    max-width: 650px;
    margin-inline: auto;
    padding-inline: 1em;
    & img {
      height: auto;
      width: 130px;
      margin: 0.2em;
    }
  }
  .header-picture-section {
    display: flex;
    flex-direction: column-reverse;
  }

  .button-group {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 20px;
  }
  @media only screen and (max-width: 699px) {
    .intro-section {
      & img {
        margin-inline: auto;
        padding-bottom: 1em;
      }
    }
    .button-group {
      justify-content: space-around;
    }
  }
  @media only screen and (min-width: 700px) {
    .intro-section {
    }
    .header-picture-section {
      flex-direction: row;
    }
  }
</style>
