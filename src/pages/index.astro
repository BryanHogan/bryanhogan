---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import CardLU from "../components/CardLU.astro";
import { LifeUpdates } from "../life-updates";
---

<Layout
  title="Bryan Hogan"
  metaDescription="Bryan Hogan's site. Here you can find my blog, about, now, newsletter and portfolio page."
  headerMode="Home"
  ogtype="website"
>
  <section class="intro">
    <div class="intro-section">
      <div class="header-picture-section">
        <h1>Hi, I'm<br />Bryan Hogan.</h1>
        <picture>
          <source
            type="image/avif"
            srcset="../images/Bryan-Hogan-Smiling.avif"
          />
          <source
            type="image/webp"
            srcset="../images/Bryan-Hogan-Smiling.webp"
          />
          <img
            src="../images/Bryan-Hogan-Smiling.png"
            width="363"
            height="359"
            alt="Bryan Hogan smiling"
            decoding="async"
          />
        </picture>
      </div>
      <p>On this page you can find my blog, portfolio and more.</p>
      <div class="button-group">
        <Button
          link="/blog"
          text="Blog"
          targetText="_self"
          buttonStyle="gradient large grow"
        />
        <Button
          link="/follow"
          text="Follow"
          targetText="_self"
          buttonStyle="bright large grow"
        />
        <Button
          link="/portfolio"
          text="Portfolio"
          targetText="_self"
          buttonStyle="bright large grow"
        />
      </div>
    </div>
  </section>
  <section>
    <h2 class="text-align-center">Life Updates</h2>
    <ul class="life-updates-container">
      {LifeUpdates.map((lifeUpdate) => (
        <li>
          <CardLU
            title={lifeUpdate.title}
            date={lifeUpdate.date}
            text={lifeUpdate.description}
            cardButtons={lifeUpdate.cardButtons}
          />
        </li>
      ))}
      <li>
      <li class="special">
        <p>
          Sharing updates on my life. The <a href="/about">About</a> and <a
            href="/now">Now</a
          > pages are also definitely worth checking out.
        </p>
      </li>
    </ul>
  </section>
</Layout>

<style>
  .life-updates-container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: auto auto auto;
    justify-items: center;
    list-style: none;
    max-width: 1350px;
    width: 80%;
    margin-inline: auto;
    & .special {
      grid-row: 1;
      height: min-content;
      & p {
      }
    }
  }
  h1 {
    padding-bottom: 0.25em;
  }
  .intro {
    min-height: 86vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-top: 2em;
  }
  section {
    padding: 0px;
    margin: 0px;
  }
  .intro-section {
    min-height: 40vh;
    max-width: 650px;
    margin-inline: auto;
    padding-inline: 1em;
    & img {
      height: auto;
      width: 130px;
      margin: 0.2em;
    }
  }
  .header-picture-section {
    display: flex;
    flex-direction: column-reverse;
  }

  .button-group {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 20px;
    margin-bottom: 4em;
  }
  @media only screen and (max-width: 699px) {
    .life-updates-container {
      grid-template-columns: 1fr;
      & .special {
        margin-block: 1em;
      }
    }
    .intro-section {
      & img {
        margin-inline: auto;
        padding-bottom: 1em;
      }
    }
    .button-group {
      justify-content: space-around;
    }
  }
  @media only screen and (min-width: 700px) {
    .life-updates-container {
      & .special {
        grid-column: 3 / 4;
        grid-row: 1 / 2;
        width: 100%;
        height: 100%;
        border: 1px solid white;
        border-radius: 1em;
        & p {
          padding: 20px;
        }
      }
    }
    .life-updates-container {
      gap: 2.4em 1.2em;
    }
    .header-picture-section {
      flex-direction: row;
    }
  }
</style>
