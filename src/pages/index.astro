---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Button from "../components/Button.astro";
import FocusedContentGroup from "../components/FocusedContentGroup.astro";
import HeroLayout from "../layouts/HeroLayout.astro";
import CommonSectionWithSide from "../components/CommonSectionWithSide.astro";
import TextElementBorderTopOpen from "../layouts/TextElementBorderTopOpen.astro";
import CardOld from "../components/CardOld.astro";
---

<Layout title="Welcome to Astro.">
  <Header />
  <HeroLayout>
    <FocusedContentGroup />
  </HeroLayout>
  <CommonSectionWithSide />
  <section>
    <h2 class="text-align-center" style="margin-bottom: var(--small-gap);">
      Projects
    </h2>
    <div class="project-cards-container">
      <div class="card">
        <h3>Code & Context</h3>
        <img src="../logos/CoCo-Logo.svg" />
        <p>
          Here is some text. Here is some text. Here is some text. Here is some
          text. Here is some text.
        </p>
        <div class="accordion">
          <input type="checkbox" name="collapse" id="handle1" />
          <div class="collapsable">
            <p>
              This text can be hidden. Or it can also be shown. This text can be
              hidden. Or it can also be shown.
            </p>
          </div>
          <label for="handle1"><div class="collapse-line"></div></label>
        </div>
      </div>
    </div>
  </section>
  <section>
    <h2 class="text-align-center">Skills</h2>
    <ul class="skills-list">
      <li>
        <img
          src="../logos/Davinci-Resolve-Logo.svg"
          alt="Light only logo of Davinci Resolve"
        />
      </li>
      <li>
        <img
          src="../logos/Affinity-Logo.svg"
          alt="Light only logo of Affinity"
        />
      </li>
      <li>
        <img
          src="../logos/Aseprite-Logo.svg"
          alt="Light only logo of Aseprite"
        />
      </li>
      <li>
        <img src="../logos/Figma-Logo.svg" alt="Light only logo of Figma" />
      </li>
      <li>
        <img src="../logos/HTML-Logo.svg" alt="Light only logo of HTML 5" />
      </li>
      <li>
        <img src="../logos/CSS-Logo.svg" alt="Light only logo of CSS" />
      </li>
      <li>
        <img
          src="../logos/Typescript-Logo.svg"
          alt="Light only logo of Typescript"
        />
      </li>
      <li>
        <img src="../logos/Astro-Logo.svg" alt="Light only logo of Astro" />
      </li>
      <li><img src="../logos/Postcss-Logo.svg" /></li>
      <li><img src="../logos/Git-Logo.svg" /></li>
      <li><img src="../logos/Github-Logo.svg" /></li>
      <li><img src="../logos/Java-Logo.svg" /></li>
      <li><img src="../logos/Obsidian-Logo.svg" /></li>
      <li><img src="../logos/Notion-Logo.svg" /></li>
      <li><img src="../logos/Google-Sheets-Logo.svg" /></li>
    </ul>
  </section>
  <section
    class="gradient-background-darker text-section text-align-center contact-section"
    id="contact"
  >
    <h2 class="text-shadow">Contact</h2>
    <div class="form-container">
      <p class="text-shadow"><em>Reach out to me here</em></p>
      <form action="https://formspree.io/f/xyyovedd" method="POST">
        <label>
          <input type="email" name="email" placeholder="Your email" required />
        </label>
        <label>
          <textarea name="message" placeholder="Your message" required
          ></textarea>
        </label>
        <button class="button-white" type="submit">Send</button>
      </form>
    </div>
    <address>
      <p class="location-container text-shadow">
        <s>Germany, Cologne</s><br />South Korea, Seoul
      </p>
      <a
        href="mailto:BryanHogan@gmx.net"
        class="text-shadow mail-adress"
        style="color: var(--color-main-bright);"
        ><strong>BryanHogan@gmx.net</strong></a
      >
    </address>
  </section>
</Layout>

<style>
  .projects-card-container {
  }
  .card {
    min-width: 260px;
    max-width: 380px;
    display: flex;
  }
  .accordion {
    & > input[name="collapse"] {
      display: none;
    }
    & .collapsable {
      overflow: hidden;
      max-height: 100px;
      transition: all 0.4s;
      box-shadow: 1px 2px 4px rgba(0, 0, 0, 0.3);
      width: 100px;
    }
    & label {
      cursor: pointer;
      &:hover {
        background-color: aqua;
      }
    }
    & input[name="collapse"]:checked ~ .collapsable {
      height: auto;
      max-height: 400px;
      transition: all 1s;
    }
    & .collapse-line {
      height: 5px;
      background-color: var(--color-main-bright);
    }
    & label::before {
      content: url(../icons/Arrow-Circle-Icon.svg);
      position: absolute;
      right: 0px;
      transform: rotate(0deg);
      transition: 400ms;
    }
    & input[name="collapse"]:checked ~ label::before {
      content: url(../icons/Arrow-Circle-Icon.svg);
      transform: rotate(180deg);
      transform-origin: center;
    }
  }

  #contact address {
    color: var(--color-main-bright);
    & p {
      padding: 10px;
      text-decoration: dotted;
    }
    & .location-container::before {
      content: url(../icons/Map-Pin-Icon.svg);
      position: absolute;
      transform: translateX(-40px);
    }
    & .mail-adress::before {
      content: url(../icons/Mail-Icon.svg);
      position: absolute;
      transform: translateX(-40px);
    }
  }
  #contact {
    & .form-container {
      margin-inline: 15px;
    }
    & form {
      display: flex;
      flex-direction: column;
      margin: 30px;
      padding: 60px 20px;
      background-color: #2021241f;
      box-shadow: var(--box-shadow-medium);
      max-width: 550px;
      margin-inline: auto;
      border-radius: 1em;
    }
    & label {
      padding-block: 1em;
    }
    & input,
    textarea {
      width: 80%;
      border: 2px solid var(--color-main-bright);
      border-radius: 5px;
      padding: 4px;
      box-shadow: var(--box-shadow-medium);
    }
    & input {
      font-size: 1.2rem;
    }
    & textarea {
      height: 90px;
    }
    & button {
      color: var(--color-main-dark);
      background-color: #fff;
      border: 0px;
      border-radius: 10px;
      box-shadow: var(--box-shadow-medium);
      width: 30%;
      font-size: 1rem;
      padding: 10px;
      margin-inline: auto;
      transition: all 200ms linear;
      box-shadow: var(--box-shadow-large),
        inset 0px 0px 0px 0px rgba(0, 0, 0, 0.25);
      &:hover {
        box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0.25),
          inset var(--box-shadow-large);
        text-shadow: var(--text-shadow-inset);
      }
    }
  }
  .skills-list {
    list-style: none;
    display: flex;
    justify-content: center;
    flex-direction: row;
    flex-wrap: wrap;
    max-width: 80%;
    margin-inline: auto;
    & li {
      height: 80px;
      width: 80px;
      background-color: var(--color-main-dark-brighter);
      border-radius: 1em;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 20px;
    }
    & img {
      min-width: 40px;
      opacity: 0.8;
      transition: opacity 100ms;
    }
    & li:hover img {
      opacity: 1;
    }
  }
  .second-main-content-group {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .navigation-main {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.6%;
    max-width: 1050px;
    width: 100%;
    & a {
      color: var(--color-main-bright);
      font-size: 1.1rem;
      width: 200px;
      height: 80px;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      margin: 1rem;
      border: 2px solid var(--color-main-bright);
      border-radius: 15px;
      background-color: #20212410;
    }
  }
  @media only screen and (min-width: 699px) {
  }
  @media only screen and (max-width: 699px) {
    .skills-list {
      max-width: 100%;
    }
  }
</style>
