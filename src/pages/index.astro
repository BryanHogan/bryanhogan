---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="Welcome to Astro.">
  <Header />
  <div class="hero-container">
    <img src="../../bryan_large.png" style="height: 340px; width: auto" />
    <div class="text-element">
      <h1>Hello, I'm<br />Bryan Hogan.</h1>
      <p>Enthusiast In Development, Design And More.</p>
    </div>
    
  </div>
</Layout>

<style>
  .hero-container {
    display: flex;
    grid-template-columns: repeat(2, 1fr);
    width: 100%;
    min-height: 550px;
    background-color: rgb(68, 67, 153);
    background-image: linear-gradient(140deg, #AF81CD, #767FD1, #8FB8CD, #32CCDF);
    background-size: 110%;
    animation: bg-animation 5s infinite alternate;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }
  @keyframes bg-animation {
    0% {
      background-position: right;
    }
    100% {
      background-position: left;
    }
    
  }
  img {
    margin: 40px;
    border-radius: 15px;
    border: 2px solid var(--color-main-bright);
    border-radius: 2.1875rem 2.1875rem 0rem 2.1875rem;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }
  h1 {
    margin: 40px 0px;
    padding: 0px 30px;
  }
  .text-element {
    margin: 0px;
    max-width: 450px;
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    p {
      border: 2px solid var(--color-main-accent);
      padding: 15px 30px;
      border-radius: 0.9375rem 0.9375rem 0.9375rem 0rem;
      font-size: 1.8rem;
      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);

    }
  }
</style>
