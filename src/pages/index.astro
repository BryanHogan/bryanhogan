---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="Welcome to Astro.">
  <Header />
  <div class="hero-container">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="128"
      height="128"
      viewBox="0 0 128 128"
      fill="none"
    >
      <circle cx="64" cy="64" r="64" fill="#8FB8CD"></circle>
    </svg>
    <div class="first-main-content-group">
      <img src="../../bryan_large.png" style="height: 340px; width: auto" />
      <div class="text-element">
        <h1>Hello, I'm<br />Bryan Hogan.</h1>
        <p>Enthusiast In Development, Design And More.</p>
      </div>
    </div>
    <div class="second-main-content-group">
      <h2>Where Do You Want To Go?</h2>
      <h2>Where Do You Want To Go?</h2>
      <h2>Where Do You Want To Go?</h2>
      <h2>Where Do You Want To Go?</h2>
      <h2>Where Do You Want To Go?</h2>
      <h2>Where Do You Want To Go?</h2>
    </div>
  </div>
  <p>hello</p>
</Layout>

<style>
  .hero-container {
    width: 100%;
    min-height: 550px;
    background-color: #767fd1;
    background-image: linear-gradient(
      140deg,
      #af81cd,
      #767fd1,
      #8fb8cd,
      #32ccdf
    );
    background-size: 110%;
    animation: bg-animation 2s infinite alternate;
    overflow: hidden;
    position: relative;
    z-index: -1;
  }
  .first-main-content-group {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    grid-template-columns: repeat(2, 1fr);
    width: 100%;
    min-height: 550px;
  }
  .second-main-content-group {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    & h2 {
      background-image: linear-gradient(
        320deg,
        #af81cd,
        #767fd1,
        #8fb8cd,
        #32ccdf
      );
      background-clip: text;
      color: transparent;
      background-size: 200%;
      animation: bg-animation 2s infinite alternate;
      text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    }
  }
  svg {
    position: absolute;
    bottom: 150px;
    left: 150px;
    animation: circle-animation 3s infinite alternate;
    z-index: -1;
    filter: blur(60px);
  }
  @keyframes circle-animation {
    0% {
      bottom: 70%;
      left: 10%;
    }
    100% {
      bottom: 30%;
      left: 90%;
    }
  }
  @keyframes bg-animation {
    0% {
      background-position: right;
    }
    100% {
      background-position: left;
    }
  }
  img {
    margin: 40px;
    border-radius: 15px;
    border: 2px solid var(--color-main-bright);
    border-radius: 2.1875rem 2.1875rem 0rem 2.1875rem;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }
  h1 {
    margin: 40px 0px;
    padding: 0px 30px;
  }
  .text-element {
    margin: 0px;
    max-width: 450px;
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    p {
      border: 2px solid var(--color-main-accent);
      padding: 15px 30px;
      border-radius: 0.9375rem 0.9375rem 0.9375rem 0rem;
      font-size: 1.8rem;
      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    }
  }
</style>
