---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Button from "../components/Button.astro";
---

<Layout title="Welcome to Astro.">
  <Header />
  <div class="hero-container">
    <div class="first-main-content-group">
      <img src="../../bryan_large.png" style="height: 340px; width: auto" />
      <div class="text-element">
        <h1>Hello, I'm<br />Bryan Hogan.</h1>
        <p>Enthusiast In Development, Design And More.</p>
      </div>
    </div>
    <div class="second-main-content-group">
      <nav class="navigation-main">
        <Button text="Blog" link="./#" buttonStyle="transparent-bright large inset-dark-shadow" />

        <Button text="Test" link="./#" buttonStyle="transparent-bright large grow" />
        <Button text="Test" link="./#" buttonStyle="bright small grow" />
        <Button text="Another One" link="./#" buttonStyle="transparent-bright-border small grow" />
      </nav>
    </div>
  </div>
  <Button text="Test" buttonStyle="dark small grow" />
</Layout>

<style>
  .hero-container {
    width: 100%;
    min-height: 550px;
    background-color: #767fd1;
    background-image: linear-gradient(
      140deg,
      #af81cd,
      #767fd1,
      #8fb8cd,
      #32ccdf
    );
  }
  .first-main-content-group {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    grid-template-columns: repeat(2, 1fr);
    width: 100%;
    min-height: 500px;
  }
  .second-main-content-group {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }
  img {
    margin: 40px;
    border-radius: 15px;
    border: 2px solid var(--color-main-bright);
    border-radius: 2.1875rem 2.1875rem 0rem 2.1875rem;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }
  h1 {
    margin: 40px 0px;
    padding: 0px 30px;
  }
  .text-element {
    margin: 0px;
    max-width: 450px;
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    p {
      border: 2px solid var(--color-main-accent);
      padding: 15px 30px;
      border-radius: 0.9375rem 0.9375rem 0.9375rem 0rem;
      font-size: 1.8rem;
      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    }
  }
  .navigation-main {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.6%;
    max-width: 1050px;
    width: 100%;
    & a {
      color: var(--color-main-bright);
      font-size: 1.1rem;
      width: 200px;
      height: 80px;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      margin: 1rem;
      border: 2px solid var(--color-main-bright);
      border-radius: 15px;
      background-color: #20212410;
    }
  }
</style>
