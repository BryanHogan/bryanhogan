---
const heightHeader = "40px";
const marginIconToScreenBorder = "0px";
const paddingNavigationalItems = "5px 10px"
---

<nav>
  <ul class="header-container list">
    <li class="logo">
      <a href="#"
        ><img src="../../public/BryanHoganTurtleLogo.svg" alt="Logo" /></a
      >
    </li>
    <li class="dropdown list">
      <img src="../../Polygon.svg" alt="Dropdown Icon" class="dropdown-icon" />
      <ul class="dropdown-menu list">
        <li><a href="#">Blog</a></li>
        <li class="last-left-side-element"><a href="#">News</a></li>
        <li><a href="#"><img src="../../Medium.svg" alt="Medium" /></a></li>
        <li><a href="#"><img src="../../LinkedIn.svg" alt="LinkedIn" /></a></li>
        <li>
          <a href="#"><img src="../../Instagram.svg" alt="Instagram" /></a>
        </li>
        <li><a href="#"><img src="../../Twitch.svg" alt="Twitch" /></a></li>
      </ul>
    </li>
  </ul>
</nav>

<style define:vars={{ heightHeader, marginIconToScreenBorder, paddingNavigationalItems}}>
  nav {
    width: 100%;
    height: var(--heightHeader);
  }
  .header-container {
    position: fixed;
    height: var(--heightHeader);
    max-height: var(--heightHeader);
    background-color: var(--color-main-dark);
    width: 100%;
  }
  .list {
    display: flex;
    flex-direction: row;
    list-style: none;
    align-items: center;

    & li a {
      padding: var(--paddingNavigationalItems);
    }
    & a img {
      max-height: 25px;
      width: 18px;
    }
    & .logo a {
        margin-left: var(--marginIconToScreenBorder);
    }
    & .logo img {
      width: 25px;
      height: 25px;
    }
  }
  @media only screen and (min-width: 636px) {
    .last-left-side-element {
      margin-right: auto;
    }
    .dropdown-icon {
      display: none;
    }
    .dropdown-menu {
      align-items: center;
      width: 100%;
    }
    .header-container .dropdown {
      width: 100%;
    }
  }
  @media only screen and (max-width: 636px) {
    .dropdown {
      &:hover .dropdown-menu {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: var(--color-main-dark);
        padding-top: var(--heightHeader);
        z-index: 1;
      }
    }
    .dropdown-menu {
      position: absolute;
      top: 0px;
      right: 0px;
      padding: 5px 10px;
      display: none;
      border-radius: 0px 0px 0px 15px;
      & li {
        border-bottom: 1px solid var(--color-main-bright);
        padding: 20px;
      }
      & li:first-child {
        border-top: 1px solid var(--color-main-bright);
      }
      & li:last-child {
        border-bottom: 0px;
      }
      & li a img,
      & li a span {
        height: 45px;
        width: 45px;
        max-width: 60px;
      }
    }
    .dropdown-icon {
      z-index: 2;
      position: relative;
      cursor: pointer;
      margin-right: var(--marginIconToScreenBorder);
      padding: var(--paddingNavigationalItems);
    }
    .logo {
      margin-right: auto;
      width: 100%;
    }
  }
</style>
