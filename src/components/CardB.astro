---
interface Props {
  title: string;
  description: string;
  ahref: string;
  coverURL: string;
  coverALT: string;
  coverWidth: any;
  coverHeight: any;
  tag: string;
  length: string;
  postURL: string;
  pubDate: Date;
  lastUpdate: Date;
  backgroundColor: string
}
const {
  coverURL,
  coverALT,
  coverWidth,
  coverHeight,
  title,
  tag,
  length,
  postURL,
  description,
  pubDate,
  lastUpdate,
  backgroundColor
} = Astro.props;
---

<div class="card-container">
  <a href={postURL}>
    <div class="gradient-area">
      <img
        class="post-cover-symbol"
        src={coverURL}
        alt={coverALT}
        width={coverWidth}
        height={coverHeight}
        transition:name={coverURL}
      />
      <h2>{title}</h2>
    </div>

    <div class="card-second-content-container">
      <p class="description-text">{description}</p>
      <div class="information-area">
        <div>
          <img
            src="/icons/Tag-Icon.svg"
            alt="Minimal bright tag icon"
            width="17"
            height="17"
          /><p class="tag-text">{tag}</p>
        </div>
        <div
          title={"Published: " +
            new Date(pubDate).toLocaleDateString("en-GB") +
            " & Last update: " +
            new Date(lastUpdate).toLocaleDateString("en-GB")}
        >
          <img
            src="/icons/Round-Arrow-Icon.svg"
            alt="Round arrow indicating date of last update"
            width="20"
            height="20"
          />
          <p>
            <time datetime={lastUpdate.toISOString()}>
              {new Date(lastUpdate).toLocaleDateString("en-GB")}
            </time>
          </p>
        </div>
        <div>
          <img
            src="/icons/Timer-Icon.svg"
            alt="Minimal bright timer icon"
            width="14"
            height="17"
          /><p>{length} min</p>
        </div>
      </div>
    </div>
  </a>
</div>

<style  define:vars={{ backgroundColor }}>
  .post-cover-symbol {
    max-height: 75px;
    width: 75px;
    margin-top: 30px;
  }
  .tag-text {
    text-transform: capitalize;
  }
  .card-container {
    border-radius: 1rem;
    box-shadow: var(--box-shadow-large);
    & a {
      text-decoration: none;
      color: var(--color-main-bright);
    }
    & .description-text {
      padding-top: var(--space-s);
      max-width: 400px;
      padding-inline: var(--space-xs);
    }
    & h2 {
      font-size: 1.6rem;
      text-align: center;
      text-shadow: var(--text-shadow);
      margin: 15px 10px;
    }
  }
  .gradient-area {
    box-shadow: var(--box-shadow-large);
    width: 100%;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    border-radius: 1em 1em 0 0;
    background-color: var(--backgroundColor);
    & .post-cover-symbol {
      margin-inline: auto;
      height: 70px;
    }
  }
  .card-second-content-container {
    border: 2px solid var(--color-main-dark-brighter);
    border-top: 1px solid var(--color-main-dark-brighter);
    border-radius: 0 0 1rem 1rem;
  }
  .information-area {
    margin-top: auto;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 10px 15px;
    & img {
      width: 30px;
      height: auto;
    }
    & div {
      display: flex;
      flex-direction: row;
      align-items: center;
      & > * {
        padding-inline: 5px;
      }
    }
  }
</style>
