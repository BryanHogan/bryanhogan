---
interface Props {
  title: string;
  description: string;
  ahref: string;
  coverURL: string;
  coverALT: string;
  coverWidth: any;
  coverHeight: any;
  tag: string;
  length: string;
  postURL: string;
  pubDate: Date;
  lastUpdate: Date;
}
const {
  coverURL,
  coverALT,
  coverWidth,
  coverHeight,
  title,
  tag,
  length,
  postURL,
  description,
  pubDate,
  lastUpdate,
} = Astro.props;
---

<div class="card-container">
  <a href={postURL}>
    <div class="gradient-background gradient-area">
      <img
        class="post-cover-symbol"
        src={coverURL}
        alt={coverALT}
        width={coverWidth}
        height={coverHeight}
        transition:name={coverURL}
      />
      <h2>{title}</h2>
      <div class="information-area">
        <div>
          <img
            src="/icons/Tag-Icon.svg"
            alt="Minimal bright tag icon"
            width="17"
            height="17"
          /><p>{tag}</p>
        </div>
        <div title="Last update date">
          <img
            src="/icons/Round-Arrow-Icon.svg"
            alt="Round arrow indicating date of last update"
            width="20"
            height="20"
          />
          <p>
            <time datetime={pubDate.toISOString()}>
              {new Date(pubDate).toLocaleDateString("en-GB")}
            </time>
          </p>
        </div>
        <div>
          <img
            src="/icons/Timer-Icon.svg"
            alt="Minimal bright timer icon"
            width="14"
            height="17"
          /><p>{length}</p>
        </div>
      </div>
    </div>
  </a>
  <a href={postURL} class="description-text">
    <p>{description}</p>
  </a>
</div>

<style>
  .post-cover-symbol {
    max-height: 75px;
    width: 75px;
    margin-top: 30px;
  }
  .card-container {
    & a {
      text-decoration: none;
      color: var(--color-main-bright);
    }
    & .description-text p {
      margin-top: 20px;
      max-width: 400px;
      padding-inline: 5px;
    }
    & h2 {
      font-size: 1.6rem;
      text-align: center;
      text-shadow: var(--text-shadow);
      margin: 15px 10px;
    }
  }
  .gradient-area {
    width: 100%;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    border-radius: 1em;
    & .post-cover-symbol {
      margin-inline: auto;
      height: 70px;
    }
    & .information-area {
      background-color: var(--color-main-dark-transparent);
      border-radius: 0px 0px 1em 1em;
      margin-top: auto;
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      flex-wrap: wrap;
      padding: 10px 15px;
      & img {
        width: 30px;
        height: auto;
      }
      & div {
        display: flex;
        flex-direction: row;
        align-items: center;
        & > * {
          padding-inline: 5px;
        }
      }
    }
  }
</style>
