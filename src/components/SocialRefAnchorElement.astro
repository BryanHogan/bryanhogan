---
import { SocialMediaProfile } from "./socials";

interface Props {
    social: SocialMediaProfile;
}

const { social } = Astro.props;
---

<a href={social.url} target="_blank">
    <img
        src={social.logo.url}
        alt={social.logo.alt}
        width={social.logo.width}
        height={social.logo.height}
        title={social.name}
    />
</a>
<style>
    header {
        width: 100%;
        height: 50px;
    }
    .header-container {
        position: fixed;
        background-color: var(--color-main-dark);
        z-index: 4;
        list-style: none;
        display: flex;
        flex-direction: row;
        align-items: center;
        height: 50px;
        width: 100%;
        & li a {
            color: var(--color-main-bright);
            text-decoration: none;
        }
        & .container-dropdown-items li,
        .container-priority-items li {
            transition: all 300ms;
            filter: brightness(0) saturate(100%) invert(57%) sepia(6%)
                saturate(183%) hue-rotate(169deg) brightness(92%) contrast(92%);
            transform: scale(1.001);
            &:hover {
                transition: all 200ms;
                filter: brightness(0) saturate(100%) invert(86%) sepia(2%)
                    saturate(892%) hue-rotate(187deg) brightness(114%)
                    contrast(88%);
                transform: scale(1.1) translate3d(0, 0, 0) perspective(1px);
            }
        }
    }
    img {
        height: 20px;
        width: 100%;
        min-width: 30px;
    }
    .dropdown,
    .container-priority-items {
        height: 100%;
    }
    .container-dropdown-items,
    .container-priority-items,
    .dropdown {
        list-style: none;
        display: flex;
        flex-direction: row;
        align-items: center;
    }
    .last-item-left-side {
        margin-right: auto;
    }
    .last-item-right-side {
        margin-left: auto;
    }
    .container-dropdown-items li,
    .container-priority-items li {
        padding: 5px 7px;
        & a {
        }
    }
    @media only screen and (min-width: 699px) {
        .menu-icon {
            display: none;
        }
    }
    @media only screen and (max-width: 699px) {
        .dropdown {
            margin-left: auto;
            z-index: 5;
            &:hover .container-dropdown-items {
                display: flex;
            }
            &:not(:hover) .container-dropdown-items {
                display: none;
                animation: fade-out 300ms 1 ease-out;
            }
        }
        .menu-icon {
            margin-right: 20px;
            padding-inline: 10px;
            max-width: 45px;
            filter: brightness(0) saturate(100%) invert(57%) sepia(6%)
                saturate(183%) hue-rotate(169deg) brightness(92%) contrast(92%);
        }
        .container-dropdown-items {
            position: absolute;
            top: 40px;
            right: 0px;
            display: none;
            background-color: var(--color-main-dark);
            flex-direction: column;
            align-items: center;
            padding: 10px 20px;
            border-radius: 0px 0px 0px 15px;
            transition: all 200ms ease-in-out;
            animation: fade-in 200ms 1;
            & li {
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 20px 10px;
                width: 50px;
                border-bottom: 1px solid var(--color-main-bright);
            }
            & li:first-child {
                border-top: 1px solid var(--color-main-bright);
            }
        }
    }
    @keyframes fade-in {
        0% {
            opacity: 0;
        }
        25% {
        }
        75% {
        }
        100% {
            opacity: 1;
        }
    }
    @keyframes fade-out {
        0% {
            opacity: 1;
            display: flex;
        }
        25% {
        }
        75% {
            display: flex;
        }
        100% {
            display: none;
            opacity: 0;
        }
    }
</style>
