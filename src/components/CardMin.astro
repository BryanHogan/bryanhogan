---
interface Props {
    href: string;
    size?: string;
    targetBlank?: boolean;
    title?: string;
    justifyTop?: boolean;
}
const {href, size = "6rem", targetBlank = true, title, justifyTop = false} = Astro.props;
---

<a href={href} target={targetBlank ? "_blank" : "_self"} title={title} aria-label={"Go to " + href} class={justifyTop ? "justify-top" : ""}><slot/></a>

<style define:vars={{ size }}>
    a {
        width: 100%;
        min-height: var(--size);
        border: 1px solid var(--border-color);
        background-color: var(--color-neutral-900);
        border-radius: var(--border-radius-s);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-decoration: none;
        padding: var(--space-2xs);
        &:hover {
            color: var(--color-accent-500);
        }
        &>:global(p) {
            padding-inline: var(--space-xs);
            text-align: center;
        }
    }
    .justify-top {
        justify-content: flex-start;
        padding-block: var(--space-xs);
    }
</style>